{
	"compilerOptions": {
		"lib": ["es2022"],
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	}
}
